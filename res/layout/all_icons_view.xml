<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:ignore="MissingPrefix">

    <include android:id="@+id/toolbar" layout="@layout/toolbar" />

    <ProgressBar
        android:id="@+id/icons_grid_progress"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        style="?android:attr/progressBarStyleSmallTitle" />

    <FrameLayout
        android:id="@+id/search_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/all_apps_search_bar_height"
        android:layout_gravity="center|top"
        android:gravity="center|bottom"
        android:layout_below="@+id/toolbar"
        android:orientation="horizontal"
        android:paddingTop="@dimen/all_apps_search_bar_margin_top"
        android:layout_marginStart="@dimen/all_apps_search_bar_margin_top"
        android:layout_marginEnd="@dimen/all_apps_search_bar_margin_top"
        android:saveEnabled="false">

        <EditText
            android:id="@+id/edtSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:hint="@string/search_icons_hint"
            android:inputType="text|textNoSuggestions"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:textColor="?attr/colorAccent"
            android:textColorHint="@drawable/all_apps_search_hint"
            android:textSize="16sp" />
    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/icons_grid"
        android:layout_below="@+id/search_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" />
</RelativeLayout>
